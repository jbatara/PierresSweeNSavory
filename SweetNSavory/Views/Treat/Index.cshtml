@using SweetNSavory.Models;
@using System.Linq;
@{
  Layout = "_Layout";
}
@model List<TreatViewModel>;

<h1>Treats</h1>

@if(Model.Any())
{
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID#</th>
      <th scope="col">Treat</th>
      <th scope="col">Categories</th>
    </tr>
  </thead>
  <tbody>
  @foreach(Treat t in Model)
  {
    <tr class="clickable" onclick="window.location='@($"/treat/{t.TreatId}")'">
      <th scope="row">@($"{t.TreatId}")</th>
      <td>@($"{t.TreatName}")</td>
      <td>
          @foreach(TreatFlavor tf in t.TreatFlavors)
          {
              <p>@($"{tf.FlavorName}")</p><a href="/treat/deleteflavor/" name="id" value="tf."
          }
      </td>
    </tr>
  }
  </table>
}
else
{
    <p>I'm sorry, there are currently no stylists. Please add a stylist to continue.</p>
    <a href="/stylist/new" class="btn btn-info">Add Stylist</a> 
}